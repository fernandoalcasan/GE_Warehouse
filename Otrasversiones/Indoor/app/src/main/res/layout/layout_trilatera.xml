<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.csf.indoor.trilatera"
    android:orientation="vertical">

    <TextView
        android:id="@+id/beacon1"
        android:layout_width="357dp"
        android:layout_height="60dp"
        android:maxLines="15"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="27dp" />

    <TextView
        android:id="@+id/beacon2"
        android:layout_width="357dp"
        android:layout_height="60dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/beacon3"
        android:layout_width="357dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/beacon4"
        android:layout_width="357dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/zona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textAlignment="center" />

    <ProgressBar
        android:id="@+id/barra"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:progressBackgroundTint="@android:color/black"
        android:progressTint="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/rango"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:text="Zona 1  Zona 2  Zona 3  Zona 4"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/orden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:text="Orden\n   Fzsb - 6iDX - 9D2r - qm8T  "
        android:textAlignment="center" />

</LinearLayout>
